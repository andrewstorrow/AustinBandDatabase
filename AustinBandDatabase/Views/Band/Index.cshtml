@model IEnumerable<AustinBandDatabase.Models.Band>

@{
    ViewBag.Title = "Home";
}

<h2>New Bands</h2>

<div class="row">
    @foreach (var band in Model) {
        <div class="col-md-3 col-sm-6">
            <h3>@Html.ActionLink(band.Name, "Detail", "Band",
            new { id = band.Id }, null)</h3>
            <a href="@Url.Action("Detail", "Band", new { id = band.Id })">
                <img src="http://via.placeholder.com/200x200"
                      alt="@band.Name"
                      class="img-responsive" />
            </a>
        </div>
    }
</div>