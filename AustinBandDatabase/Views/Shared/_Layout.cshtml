<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Austin Band Database</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/abd-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/abd-site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Austin Band Database", "Index", "Band", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Add menu items here -->
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="#">Browse</a></li>
                            <li><a href="#">Add</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Navbar -->

    <!-- Body Content -->
	<div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Austin Band Database</p>
        </footer>
    </div>
    <!-- Body Content -->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Scripts/abd-bootstrap.min.js"></script>
</body>
</html>
